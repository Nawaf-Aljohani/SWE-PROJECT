                </div>








                <script>
                    var date_in = new Date(localStorage.getItem("check_in"));
                    var date_out = new Date(localStorage.getItem("check_out"));
                    document.getElementById("Room_type").value = localStorage.getItem("type");
                    document.getElementById("Room_price").value = localStorage.getItem("price");
                    document.getElementById("Check_in").value = localStorage.getItem("check_in_string");
                    document.getElementById("Check_out").value = localStorage.getItem("check_out_string");
                    document.getElementById("Total_days").value = dateDiffInDays(date_in, date_out);
                    document.getElementById("Total_price").value = localStorage.getItem("price") * dateDiffInDays(date_in, date_out);
                    function dateDiffInDays(a, b) {
                        const _MS_PER_DAY = 1000 * 60 * 60 * 24;
                        // Discard the time and time-zone information.
                        const utc1 = Date.UTC(a.getFullYear(), a.getMonth(), a.getDate());
                        const utc2 = Date.UTC(b.getFullYear(), b.getMonth(), b.getDate());

                        return Math.floor(((utc2 - utc1) / _MS_PER_DAY)+1);
                    }

                </script>




